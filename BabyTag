    <script>
        // --- Gemini API Integration Logic ---
        const apiKey = ""; 
        const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;

        // Function to handle exponential backoff and fetch
        async function fetchWithBackoff(url, options, retries = 5) {
            for (let i = 0; i < retries; i++) {
                try {
                    const response = await fetch(url, options);
                    if (!response.ok) {
                        // Handle rate limit (429) errors with backoff
                        if (response.status === 429 && i < retries - 1) { 
                            const delay = Math.pow(2, i) * 1000 + Math.random() * 1000;
                            console.warn(`Rate limit hit. Retrying in ${delay / 1000}s...`);
                            await new Promise(resolve => setTimeout(resolve, delay));
                            continue;
                        }
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response;
                } catch (error) {
                    if (i === retries - 1) throw error;
                    const delay = Math.pow(2, i) * 1000 + Math.random() * 1000;
                    console.warn(`Fetch error. Retrying in ${delay / 1000}s...`);
                    await new Promise(resolve => setTimeout(resolve, delay));
                }
            }
        }

        async function generateSafetyAdvice() {
            const scenarioInput = document.getElementById('safety-scenario');
            const resultsContainer = document.getElementById('advice-results');
            const generateButton = document.getElementById('generate-advice-btn');
            const query = scenarioInput.value.trim();

            if (!query) {
                resultsContainer.innerHTML = `<div class="text-red-600 font-semibold mt-2">–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –æ–ø–∏—à–∏—Ç–µ —Å—Ü–µ–Ω–∞—Ä–∏–π.</div>`;
                return;
            }

            // UI Feedback: Disable button and show loading
            generateButton.disabled = true;
            generateButton.innerHTML = '–ó–∞–≥—Ä—É–∑–∫–∞...';
            resultsContainer.innerHTML = `<div class="text-center py-4 text-gray-500">
                <svg class="animate-spin h-5 w-5 mr-3 inline text-babytag-yellow" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                –ò—â–µ–º —Å–æ–≤–µ—Ç—ã –æ—Ç –≤–µ–¥—É—â–∏—Ö —ç–∫—Å–ø–µ—Ä—Ç–æ–≤...
            </div>`;

            // System instructions to guide the model's persona and output format
            const systemPrompt = "–í—ã ‚Äî '–ö–æ–Ω—Å—É–ª—å—Ç–∞–Ω—Ç –ø–æ –¥–µ—Ç—Å–∫–æ–π –±–µ–∑–æ–ø–∞—Å–Ω–æ—Å—Ç–∏' BabyTag. –ü—Ä–µ–¥–æ—Å—Ç–∞–≤—å—Ç–µ —Ä–æ–¥–∏—Ç–µ–ª—è–º –∫—Ä–∞—Ç–∫–∏–π, –Ω–æ –¥–µ–π—Å—Ç–≤–µ–Ω–Ω—ã–π —Å–æ–≤–µ—Ç –ø–æ —É–ø—Ä–∞–≤–ª–µ–Ω–∏—é —Å—Ç—Ä–µ—Å—Å–æ–≤–æ–π —Å–∏—Ç—É–∞—Ü–∏–µ–π –∏–ª–∏ –ø–æ–≤–µ–¥–µ–Ω–∏—é —Ä–µ–±–µ–Ω–∫–∞ –≤ –ø—É–±–ª–∏—á–Ω–æ–º –º–µ—Å—Ç–µ. –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ –ø–æ–∑–∏—Ç–∏–≤–Ω—ã–π –∏ —É—Å–ø–æ–∫–∞–∏–≤–∞—é—â–∏–π —Ç–æ–Ω. –û–±—è–∑–∞—Ç–µ–ª—å–Ω–æ –≤–∫–ª—é—á–∏—Ç–µ –≤ –æ—Ç–≤–µ—Ç –æ–¥–Ω—É –ø–æ–ª–µ–∑–Ω—É—é, –ø—Ä–∞–∫—Ç–∏—á–µ—Å–∫—É—é —Ä–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏—é. –û—Ç–≤–µ—Ç –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –≤ –≤–∏–¥–µ –æ–¥–Ω–æ–≥–æ-–¥–≤—É—Ö –∞–±–∑–∞—Ü–µ–≤.";
            const userQuery = `–†–æ–¥–∏—Ç–µ–ª—å —Å–ø—Ä–∞—à–∏–≤–∞–µ—Ç: "${query}" - –î–∞–π—Ç–µ —Å–æ–≤–µ—Ç.`;

            // Payload structure, enabling Google Search for grounded advice
            const payload = {
                contents: [{ parts: [{ text: userQuery }] }],
                tools: [{ "google_search": {} }],
                systemInstruction: { parts: [{ text: systemPrompt }] },
            };

            try {
                const response = await fetchWithBackoff(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                const result = await response.json();
                const candidate = result.candidates?.[0];

                let generatedText = "–ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–ª—É—á–∏—Ç—å –æ—Ç–≤–µ—Ç. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –ø–µ—Ä–µ—Ñ–æ—Ä–º—É–ª–∏—Ä–æ–≤–∞—Ç—å –∑–∞–ø—Ä–æ—Å.";
                let sourcesHtml = '';

                if (candidate && candidate.content?.parts?.[0]?.text) {
                    generatedText = candidate.content.parts[0].text;

                    // Extract grounding sources (citations)
                    let sources = [];
                    const groundingMetadata = candidate.groundingMetadata;
                    if (groundingMetadata && groundingMetadata.groundingAttributions) {
                        sources = groundingMetadata.groundingAttributions
                            .map(attribution => ({
                                uri: attribution.web?.uri,
                                title: attribution.web?.title,
                            }))
                            .filter(source => source.uri && source.title);

                        if (sources.length > 0) {
                            sourcesHtml = `<div class="mt-4 text-xs text-gray-500 border-t pt-2">
                                <p class="font-semibold mb-1">–ò—Å—Ç–æ—á–Ω–∏–∫–∏:</p>
                                <ul class="list-disc list-inside space-y-1">
                                    ${sources.slice(0, 3).map(s => `<li><a href="${s.uri}" target="_blank" class="text-babytag-gray-dark hover:underline">${s.title}</a></li>`).join('')}
                                </ul>
                            </div>`;
                        }
                    }
                }

                // Display the advice and sources
                resultsContainer.innerHTML = `
                    <div class="bg-babytag-gray-light p-4 rounded-xl border border-babytag-yellow/50 shadow-inner">
                        <p class="text-babytag-gray-dark font-semibold">${generatedText}</p>
                        ${sourcesHtml}
                    </div>`;

            } catch (error) {
                console.error("Gemini API Error:", error);
                resultsContainer.innerHTML = `<div class="text-red-600 mt-2">–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞ –ø—Ä–∏ –∑–∞–ø—Ä–æ—Å–µ –∫ –ö–æ–Ω—Å—É–ª—å—Ç–∞–Ω—Ç—É. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –≤–∞—à–µ —Å–æ–µ–¥–∏–Ω–µ–Ω–∏–µ –∏–ª–∏ –ø–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â–µ —Ä–∞–∑.</div>`;
            } finally {
                // UI Feedback: Re-enable button
                generateButton.disabled = false;
                generateButton.innerHTML = '–ü–æ–ª—É—á–∏—Ç—å —Å–æ–≤–µ—Ç –æ—Ç —ç–∫—Å–ø–µ—Ä—Ç–∞ ‚ú®';
            }
        }

        // Simple client-side routing to switch between main and detail pages
        const mainPage = document.getElementById('main-page');
        const howItWorksPage = document.getElementById('how-it-works-page');
        const navMain = document.getElementById('nav-main');
        const navHow = document.getElementById('nav-how');

        function showPage(pageId) {
            // Hide all pages
            mainPage.classList.add('hidden');
            howItWorksPage.classList.add('hidden');

            // Reset nav styles
            navMain.classList.remove('border-babytag-yellow', 'text-babytag-gray-dark');
            navMain.classList.add('border-transparent', 'text-gray-500');
            navHow.classList.remove('border-babytag-yellow', 'text-babytag-gray-dark');
            navHow.classList.add('border-transparent', 'text-gray-500');
            
            navMain.classList.remove('border-transparent', 'text-gray-500');
            navHow.classList.remove('border-transparent', 'text-gray-500');
            navMain.classList.add('text-gray-500');
            navHow.classList.add('text-gray-500');


            // Show the requested page and update nav style
            if (pageId === 'main') {
                mainPage.classList.remove('hidden');
                navMain.classList.remove('text-gray-500');
                navMain.classList.add('border-babytag-yellow', 'text-babytag-gray-dark');
            } else if (pageId === 'how-it-works') {
                howItWorksPage.classList.remove('hidden');
                navHow.classList.remove('text-gray-500');
                navHow.classList.add('border-babytag-yellow', 'text-babytag-gray-dark');
            }
        }

        // Initialize view on load
        document.addEventListener('DOMContentLoaded', () => {
            showPage('main');
        });
    </script>
</body>
</html>
